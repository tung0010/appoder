<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChiTietSP"
    android:orientation="vertical"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FEFEFE">

        <!-- ImageView dưới cùng -->
        <ImageView
            android:id="@+id/btnHuyCT"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="0.5"
            android:src="@drawable/ic_close"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            />

        <!-- ImageView lên trên -->
        <ImageView
            android:id="@+id/imgAnhCT"
            android:layout_width="0dp"
            android:layout_height="280dp"
            android:layout_weight="6"
            android:src="@drawable/tra_hibucus_daurung"
            android:layout_marginTop="15dp"
            android:layout_marginRight="45dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/vien_giua">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/txtNameCT"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Phin Đen Đá"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="#4B2C23"
                    android:layout_marginLeft="15dp">
                </TextView>
                <TextView
                    android:id="@+id/txtMoTaCT"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ly Cà phê được pha hoàn toàn từ Phin, thêm đường đá nhưn vẫn cực đạm vị cà phê.\nGiá đã bao gồm 8% VAT."
                    android:textSize="14sp"
                    android:textColor="#878787"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp">


                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2.5"
                android:orientation="horizontal"
                android:gravity="right">
                <TextView
                    android:id="@+id/txtGiaCT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="29,000"
                    android:textColor="#4B2C23"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:layout_marginRight="3dp">

                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="đ"
                    android:textColor="#4B2C23"
                    android:textStyle="bold"
                    android:textSize="21dp"
                    android:layout_marginRight="10dp">

                </TextView>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#D0D0D0">

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">
            <LinearLayout
                android:id="@+id/ll_btnThem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/txtSizeS"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_weight="1"
                    android:text="S"
                    android:textColor="#fff"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:background="@drawable/vien_size"
                    android:gravity="center"
                    android:layout_marginLeft="15dp">
                </TextView>
                <TextView
                    android:id="@+id/txtSizeM"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_weight="1"
                    android:text="M"
                    android:textColor="#B02830"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:background="@drawable/vien_size_trang"
                    android:gravity="center"
                    android:layout_marginLeft="15dp">
                </TextView>
                <TextView
                    android:id="@+id/txtSizeL"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_weight="1"
                    android:text="L"
                    android:textColor="#B02830"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:background="@drawable/vien_size_trang"
                    android:gravity="center"
                    android:layout_marginLeft="15dp">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2.5">

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_note"
                    android:layout_marginLeft="12dp">

                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ghi Chú"
                    android:textStyle="bold"
                    android:textColor="#4B2C23"
                    android:layout_gravity="center_vertical"
                    android:textSize="15sp"
                    android:layout_marginRight="15dp">

                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Không bắt buộc"
                    android:textStyle="bold"
                    android:textColor="#9D9D9D"
                    android:layout_gravity="center_vertical"
                    android:textSize="13sp">

                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/vien_ghi_chu"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp">
                <EditText
                    android:id="@+id/etGhiChu"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:hint="Ghi Chú"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp">

                </EditText>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/btnTru"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="25dp"
                android:background="@drawable/vien_ghi_chu"
                android:src="@drawable/ic_remove">

            </ImageView>

            <TextView
                android:id="@+id/txtSoLuong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="24dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp">

            </TextView>
            <ImageView
                android:id="@+id/btnTang"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_them"
                android:background="@drawable/vien_ghi_chu">

            </ImageView>

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            tools:visibility="visible">

            <LinearLayout
                android:id="@+id/ll_BTNThem"
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:background="@drawable/vien_them"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvChiTietSP_txtThem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="7dp"
                    android:text="THÊM"
                    android:textColor="#fff"
                    android:textSize="17dp"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:id="@+id/txtTong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="3dp"
                    android:text="29,000"
                    android:textColor="#fff"
                    android:textSize="17dp"
                    android:textStyle="bold">

                </TextView>

                <TextView
                    android:id="@+id/ChiTietSP_tvDonViT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="đ"
                    android:textColor="#fff"
                    android:textSize="18dp"
                    android:textStyle="bold">

                </TextView>


            </LinearLayout>
        </LinearLayout>




    </LinearLayout>
</LinearLayout>