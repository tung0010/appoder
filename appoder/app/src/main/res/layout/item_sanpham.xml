<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/itemSP"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imgSP"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_weight="1.8"
            android:src="@drawable/tra_hibucus_daurung">
        </ImageView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:orientation="vertical"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/nameSP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phin Đen Đá"
                android:textStyle="bold"
                android:textSize="18dp"
                android:textColor="#40221B"></TextView>

            <TextView
                android:id="@+id/moTa"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:layout_marginTop="2dp"
                android:text="Ly Cà phê được pha hoàn toàn từ Phin, thêm đường đá nhưng vẫn..."
                android:textColor="#7C7C7C"
                android:textSize="13sp">

            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/gia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="29,000"
                android:textStyle="bold"
                android:textColor="#AE2730"
                android:textSize="18dp"
                android:layout_marginRight="3dp">

            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="đ"
                android:textStyle="bold"
                android:textColor="#AE2730"
                android:textSize="19dp">

            </TextView>


        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#D0D0D0">

    </LinearLayout>


</LinearLayout>